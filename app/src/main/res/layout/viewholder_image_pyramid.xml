<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView_imagePyramidViewHolder_1"
        android:layout_width="@dimen/imageSize_large"
        android:layout_height="@dimen/imageSize_large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imageView_imagePyramidViewHolder_2"
        android:layout_width="@dimen/imageSize_medium"
        android:layout_height="@dimen/imageSize_medium"
        app:layout_constraintStart_toEndOf="@id/imageView_imagePyramidViewHolder_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imageView_imagePyramidViewHolder_3"
        android:layout_width="@dimen/imageSize_small"
        android:layout_height="@dimen/imageSize_small"
        app:layout_constraintStart_toEndOf="@id/imageView_imagePyramidViewHolder_2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imageView_imagePyramidViewHolder_4"
        android:layout_width="@dimen/imageSize_tiny"
        android:layout_height="@dimen/imageSize_tiny"
        app:layout_constraintStart_toEndOf="@id/imageView_imagePyramidViewHolder_3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:srcCompat="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>
